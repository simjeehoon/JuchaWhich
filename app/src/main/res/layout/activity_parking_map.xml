<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            style="@style/Image_Button_Style"
            android:id="@+id/menu_button"
            android:src="@drawable/menu_icon"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:layout_gravity="center_vertical|left"

            android:text="차량 목록"
            android:textSize="20dp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <ImageView
            style="@style/Image_Button_Style"
            android:id="@+id/car_list_button"
            android:src="@drawable/car_list_arrow"/>

        <ImageView
            style="@style/Image_Button_Style"
            android:id="@+id/car_action_button"
            android:src="@drawable/car_action_dots"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <View
            android:id="@+id/Map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#888"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:padding="12dp"
            android:background="#DBB">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="제목"
                android:textSize="22dp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="텍스트의 내용"
                android:textSize="16dp"
                android:textColor="#000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#FFF"
            android:layout_gravity="bottom|center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="현재위치의 주소"
                android:textSize="16dp"
                android:textColor="#222"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="주차장 인식 여부"
                android:textSize="16dp"
                android:textColor="#222"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:lines="1"
                android:textColor="#222"/>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
